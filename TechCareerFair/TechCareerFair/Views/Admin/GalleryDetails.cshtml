@model TechCareerFair.Models.gallery

<div>
    <h4>Media Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Directory)
        </dt>

        <dd>
            @if(Model.Directory.Contains("http"))
            {
                <iframe class="hp-video" src="@Model.Directory"
                    data-toggle="lightbox" frameborder="1" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            }
            else
            {
                <img src='@Model.Directory' />
            }
            @Html.DisplayFor(model => model.Directory)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "GalleryEdit", new { id = Model.GalleryID }) |
    @Html.ActionLink("Back to Gallery", "Gallery")
</p>
