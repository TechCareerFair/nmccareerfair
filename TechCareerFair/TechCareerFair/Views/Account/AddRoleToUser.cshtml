@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@*author: John Velis*@
@{
    ViewBag.Title = "Add Role to User";
}

<h2>Add Role to User</h2>
<h3>User Name: @ViewBag.UserName</h3>

@if(ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
}

@using (Html.BeginForm("AddRoleToUser", "Account", new { accountType = ViewBag.AccountType }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <p>
        Role Name: @Html.DropDownList("RoleName", ViewBag.Roles as SelectList)
    </p>

    @Html.Hidden("userName", ViewBag.UserName as string)

    <input type="submit" value="Save" class="btn btn-default" />
}

<div>
    @Html.ActionLink("Back to Roles", "ViewUsersRoles", new { userName = ViewBag.UserName, accountType = ViewBag.AccountType })
</div>
