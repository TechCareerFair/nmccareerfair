@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@*author: John Velis*@
@{
    ViewBag.Title = "Roles by User";
    string userName = ViewBag.UserName;
    string list = "";

    if(ViewBag.AccountType == "A")
    {
        list = "ListApplicants";
    }
    else
    {
        list = "ListBusinesses";
    }
}

<h2>Roles by User</h2>
<h3>User: @ViewBag.UserName</h3>

<p>
    @Html.ActionLink("Add a Role", "AddRoleToUser", new { userName = userName, accountType = ViewBag.AccountType })
</p>
<table class="table">
    <tr>
        <th>
            User Role
        </th>
        <th></th>
    </tr>

    @foreach (var role in ViewBag.RolesForUser)
    {
        <tr>
            <td>
                @role
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteRoleForUser", new { userName = userName, roleName = role, accountType = ViewBag.AccountType })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Return", list, "Admin")
</div>
