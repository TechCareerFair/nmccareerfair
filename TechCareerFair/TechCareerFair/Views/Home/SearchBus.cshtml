@model IEnumerable<TechCareerFair.Models.BusinessViewModel>


@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Home - Seach Business Information";
    var pagedList = (IPagedList)Model;
    var criteria = ViewBag.CurrentCriteria;
    var currentFilter = ViewBag.CurrentFilter;
}

<style>
    .body-content {
        background-color: #edf9ef;
    }
</style>

<h2>Search a Business</h2>
<br/>

Page @(pagedList.PageCount < pagedList.PageNumber ? 0 : pagedList.PageNumber) of @pagedList.PageCount
@Html.PagedListPager(pagedList, page => Url.Action("ListBusinesses", new { page, filter = currentFilter, sortOrder = ViewBag.CurrentSort, searchCriteria = criteria }))

@using (Html.BeginForm())
{
    <div id="FilterSearch" class="form-horizontal">

        <div class="form-group">
            @Html.Label("Search by Business Name", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBox("searchCriteria", null, new { @class = "form-control" })
        </div>
        


        <div class="form-group business-field">
            @Html.Label("Business Fields", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col=md-10">
                @if (ViewBag.AllFields != null)
                {
                    for (int i = 0; i < ViewBag.AllFields.Count; i++)
                    {
                        string name = ViewBag.AllFields[i].Name;
                        bool contains = (ViewBag.Fields != null ? ViewBag.Fields.Contains(name) : false);
                        @Html.CheckBox(name, contains)<span>@name</span>
                        <br />
                    }
                }
            </div>

        </div>
        <style>
            .form-group.business-field label{
                height:150px;
            }
        </style>
      
        <br/>
        <div class="form-group">
            <input type="submit" value="Find Business" class="btn col-md-2 col-md-offset-2" />
            <input type="button" value="Search Business Again" onclick="location.href='@Url.Action("SearchBus","Home")'" class="btn col-md-2 col-md-offset-2" />
        
        </div>
        </div>

        
   }  

<br/>   
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.BusinessName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Website)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.BusinessName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Website)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                </tr>
            }

        </table>
