@model IEnumerable<TechCareerFair.Models.faq>

@{
    ViewBag.Title = "FAQ";
}

<!--Using code derived from W3schools
    https://www.w3schools.com/howto/tryit.asp?filename=tryhow_js_accordion_symbol
    -->

<meta name="viewport" content="width=device-width, initial-scale=1">
<style>

    .answer {
        margin: 10px;
        background-color: #999;
        padding: 5px 25px;
    }

        .answer h2 {
            text-align: center;
            padding: 10px;
            color: white;
        }

    .accordion {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: center;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
    }

        .active, .accordion:hover {
            background-color: #ccc;
        }

        .accordion:after {
            content: '\002B';
            color: #777;
            font-weight: bold;
            float: right;
            margin-left: 5px;
        }

    .active:after {
        content: "\2212";
    }

    .panel {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        border-radius: 0;
        transition: max-height 0.2s ease-out;
    }
</style>


<br />
<h2>FAQ</h2>
<div class="container">

    <div class="row">

        <div class="col-md-6">

            <div class="answer">
                <h2>Applicant Answers</h2>

                @foreach (TechCareerFair.Models.faq faq in ViewBag.Faq)
                {
                    if (faq.IsApplicantQ)
                    {
                        <button class="accordion">@faq.Question</button>
                        <div class="panel"><p>@faq.Answer</p></div>
                    }
                }

            </div><!--end applicant faq-->
        </div><!--end left column-->


        <div class="col-md-6">
            <div class="answer">

                <h2>Business Answers</h2>
                @foreach (TechCareerFair.Models.faq faq in ViewBag.Faq)
                {
                    if (!faq.IsApplicantQ)
                    {
                        <button class="accordion">@faq.Question</button>
                        <div class="panel"><p>@faq.Answer</p></div>
                    }
                }

            </div><!--end business faq-->
        </div><!--end right column-->


    </div><!--end row-->
</div><!--end container-->

<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        });
    }
</script>


